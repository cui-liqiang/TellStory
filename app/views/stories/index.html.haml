.index-container
  .left
    .story-content
      %h3.story-title 热门故事
      - @stories.each do |story|
        .story.clearfix
          = render :partial => "shared/head_with_link", :locals => {:user => story.user}
          .index-story-content
            %h4= story.title
            %p= story.content
          %br
            %a.view-more{:href => "/stories/#{story.id}"} 查看更多

  .right
    - if logged_in
      = render "stories/start_stories"
    %h3.chapter-title 最活跃用户
    %ul.hot-people
